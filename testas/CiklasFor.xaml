<UserControl x:Class="testas.CiklasFor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:testas"
             mc:Ignorable="d" 
          >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="65"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="65"/>
            <ColumnDefinition Width="35"/>
        </Grid.ColumnDefinitions>
        <Image Source="Icons\For.png" Grid.Row="0" Grid.Column="0"/>
        <TextBox x:Name="n" Text="Vieta pakartojimų kiekiui" Grid.Row="1" Background="LightGreen" TextWrapping="Wrap" Grid.ColumnSpan="2" ToolTip="Įrašytike sveikąjį skaičių" TextChanged="n_TextChanged"/>
        <Button x:Name="Ikelti" Content="Įkelti" Click="Ikelti_Click" Grid.Row="0" Grid.Column="1"/>
    </Grid>
</UserControl>
